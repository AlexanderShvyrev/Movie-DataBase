@model MovieCreate
<div class="jumbotron pt-0 pb-5 pl-5">
    <partial name="_NavInAdd"/>
    <h5 style="text-align:center;">Add you favorite movie</h5>
    <form enctype="multipart/form-data" class="col-5" asp-action="Create" method="post">
    <div class="form-group">
        <span style="color:red;" asp-validation-for="Title"></span>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="form-group">
        <span style="color:red;" asp-validation-for="Year"></span>
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control">
    </div>
    <div class="form-group">
        <span style="color:red;" asp-validation-for="Director"></span>
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control">
    </div>
    <div class="form-group">
        <span style="color:red;" asp-validation-for="Rating"></span>
        <label asp-for="Rating"></label>
        <input type="number" asp-for="Rating" class="form-control" min="0.1" max="10" step="0.1">  
    </div>
    <div class="form-group">
        <span style="color:red;" asp-validation-for="Stars"></span>
        <label asp-for="Stars"></label><br>
        <textarea asp-for="Stars" rows="2" cols="25"></textarea>
    </div>
    <div class="form-group">
        <span style="color:red;" asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="4" cols="50"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Image" class="form-control custom-file-input">
                <label class="custom-file-label">Choose file...</label>
            </div>
        </div>
    </div>
<input type="submit" class= "btn btn-info" value="Submit">

@section Scripts{
    <script>
        $(document).ready(function() {
            $('.custom-file-input').on("change", function(){
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            });
        });
    </script>
}
</form>
</div>
