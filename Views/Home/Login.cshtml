<p style="color:red">@ViewBag.Message</p>
<div class="jumbotron m-5 col-7 pl-5 ">
    <h4 style="text-align:center;">Please login</h4>
    <hr>
    <form class="col-6" asp-action="Login" method="post">
    <div class="form-group">
        <span style="color:red;" asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <span style="color:red;" asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
    </div>
    <input type="submit" class= "btn btn-info mb-3" value="Sign up">
    <p>Don't have an account? <a href="/">Register</a></p>
</form>
</div>