@{
    ViewData["Title"] = "Home Page";
}

@model User

    <div class="jumbotron m-5 col-7 pl-5 ">
        <h3>Welcome to a wonderful world of movies</h3>
        <a href="signup" class="btn btn-sm btn-info m-2">Login</a>
        <form class="col-5" asp-action="Register" method="post">
        <div class="form-group">
            <span style="color:red;" asp-validation-for="FirstName"></span>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control">
        </div>
        <div class="form-group">
            <span style="color:red;" asp-validation-for="LastName"></span>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control">
        </div>
        <div class="form-group">
            <span style="color:red;" asp-validation-for="Email"></span>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <span style="color:red;" asp-validation-for="Password"></span>
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control">
        </div>
        <div class="form-group">
            <span style="color:red;" asp-validation-for="Confirm"></span>
            <label asp-for="Confirm"></label>
            <input asp-for="Confirm" class="form-control">
        </div>
        <input type="submit" class= "btn btn-info" value="Sign up">
    </form>
    </div>
